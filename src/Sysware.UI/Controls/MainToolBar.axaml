<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Sysware.UI.ViewModels"
             x:Class="Sysware.UI.Controls.MainToolBar"
             x:DataType="vm:MainWindowViewModel">
    
    <Border Background="#F8F8F8" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="5">
        <StackPanel Orientation="Horizontal" Spacing="5">
            <Button Content="新建" Command="{Binding NewCommand}" Margin="2">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📄" FontSize="14" Margin="0,0,4,0"/>
                            <TextBlock Text="新建"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="打开" Command="{Binding OpenCommand}" Margin="2">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📁" FontSize="14" Margin="0,0,4,0"/>
                            <TextBlock Text="打开"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="保存" Command="{Binding SaveCommand}" Margin="2">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💾" FontSize="14" Margin="0,0,4,0"/>
                            <TextBlock Text="保存"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Separator/>
            <Button Content="剪切" Command="{Binding CutCommand}" Margin="2">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✂️" FontSize="14" Margin="0,0,4,0"/>
                            <TextBlock Text="剪切"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="复制" Command="{Binding CopyCommand}" Margin="2">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" FontSize="14" Margin="0,0,4,0"/>
                            <TextBlock Text="复制"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="粘贴" Command="{Binding PasteCommand}" Margin="2">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📌" FontSize="14" Margin="0,0,4,0"/>
                            <TextBlock Text="粘贴"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Separator/>
            <Button Content="撤销" Command="{Binding UndoCommand}" Margin="2">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="↶" FontSize="14" Margin="0,0,4,0"/>
                            <TextBlock Text="撤销"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Content="重做" Command="{Binding RedoCommand}" Margin="2">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="↷" FontSize="14" Margin="0,0,4,0"/>
                            <TextBlock Text="重做"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </StackPanel>
    </Border>
    
</UserControl>
