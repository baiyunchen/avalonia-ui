<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Sysware.UI.ViewModels"
             x:Class="Sysware.UI.Controls.NavigationPanel"
             x:DataType="vm:MainWindowViewModel">
    
    <Border Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
        <Grid RowDefinitions="Auto,*">
            <!-- 导航面板标题 -->
            <Border Grid.Row="0" 
                    Background="#E0E0E0" 
                    Padding="10,8">
                <TextBlock Text="导航面板" 
                           FontWeight="Bold" 
                           FontSize="14"/>
            </Border>
            
            <!-- 导航树 -->
            <TreeView Grid.Row="1" 
                      ItemsSource="{Binding NavigationItems}"
                      SelectedItem="{Binding SelectedNavigationItem}">
                <TreeView.ItemTemplate>
                    <TreeDataTemplate ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Text="{Binding Icon}" FontSize="12" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TreeDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Grid>
    </Border>
    
</UserControl>
