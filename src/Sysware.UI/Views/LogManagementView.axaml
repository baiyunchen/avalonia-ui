<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Sysware.UI.ViewModels"
             x:Class="Sysware.UI.Views.LogManagementView"
             x:DataType="vm:LogManagementViewModel">

    <Grid RowDefinitions="Auto,Auto,2*,Auto,1*">
        <!-- 标题与统计 -->
        <TextBlock Grid.Row="0" Text="日志管理" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>

        <!-- 查询工具条 -->
        <WrapPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <CalendarDatePicker Width="220" VerticalAlignment="Center" Margin="0,0,8,0" SelectedDate="{Binding SelectedDate}"/>
            <TextBox Width="220" VerticalAlignment="Center" Margin="0,0,8,0" Watermark="搜索..." Text="{Binding SearchText}" AcceptsReturn="False"/>
            <ComboBox Width="140" VerticalAlignment="Center" Margin="0,0,8,0" ItemsSource="{Binding LogLevelOptions}" SelectedItem="{Binding SelectedLogLevelItem}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Label}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Content="搜索" Command="{Binding SearchCommand}" Margin="0,0,6,0" Background="#2196F3" Foreground="White"/>
            <Button Content="刷新" Command="{Binding RefreshCommand}" Margin="0,0,6,0"/>
        </WrapPanel>

        <!-- 数据表格 -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding LogEntries}" SelectedItem="{Binding SelectedLogEntry}"
                  AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="时间" Binding="{Binding Timestamp}" Width="180"/>
                <DataGridTextColumn Header="级别" Binding="{Binding Level}" Width="100"/>
                <DataGridTextColumn Header="源" Binding="{Binding SourceContext}" Width="200"/>
                <DataGridTextColumn Header="消息" Binding="{Binding Message}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 分割线 -->
        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" Background="LightGray"/>

        <!-- 日志详情 -->
        <Border Grid.Row="4" BorderBrush="Gray" BorderThickness="1" Margin="0,4,0,0">
            <ScrollViewer>
                <StackPanel Margin="8" IsVisible="{Binding SelectedLogEntry, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <TextBlock Text="日志详情" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                    
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" Margin="0,0,0,8">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="时间：" FontWeight="Bold" Margin="0,0,8,4"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedLogEntry.Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss.fff}'}" Margin="0,0,0,4"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="级别：" FontWeight="Bold" Margin="0,0,8,4"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="{Binding SelectedLogEntry.LevelIcon}" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding SelectedLogEntry.Level}" Foreground="{Binding SelectedLogEntry.LevelColor}"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="源：" FontWeight="Bold" Margin="0,0,8,4"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedLogEntry.SourceContext}" Margin="0,0,0,4"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="消息：" FontWeight="Bold" Margin="0,0,8,4" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SelectedLogEntry.Message}" 
                                 IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" 
                                 Background="Transparent" BorderThickness="0" Margin="0,0,0,4"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="属性：" FontWeight="Bold" Margin="0,0,8,4" VerticalAlignment="Top"
                                   IsVisible="{Binding SelectedLogEntry.Properties, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SelectedLogEntry.Properties}" 
                                 IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" 
                                 Background="Transparent" BorderThickness="0" Margin="0,0,0,4"
                                 IsVisible="{Binding SelectedLogEntry.Properties, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                        
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="异常：" FontWeight="Bold" Margin="0,0,8,4" VerticalAlignment="Top"
                                   IsVisible="{Binding SelectedLogEntry.Exception, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding SelectedLogEntry.Exception}" 
                                 IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" 
                                 Background="Transparent" BorderThickness="0" FontFamily="Consolas"
                                 IsVisible="{Binding SelectedLogEntry.Exception, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>

</UserControl>


